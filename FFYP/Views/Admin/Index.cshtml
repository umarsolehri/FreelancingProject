@model IEnumerable<Project>
@{
    ViewBag.Title = "Projects Lists";
}




<div class="compny-profile">
    @{ Html.RenderAction("UserNameDisplay", "SiteUsers"); }
    <div class="profile-company-content user-profile main-user" data-bg-color="f5f5f5">
        <div class="container">
            <div class="row">
                @{ Html.RenderPartial("_Partialheadbar"); }
                <div class="col-md-12">
                    <div class="tab-content">
                        <div id="profile" class="tab-pane fade in active">
                            <div class="row">
                                <section class="demo-section">
                                    <div class="container">
                                        <table class="table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Buyer Name</th>
                                                    <th>Project Title</th>
                                                    <th>Location</th>
                                                    <th>Posted Date</th>
                                                    <th>Status</th>
                                                    <th><span><i class="fa fa-check"></i></span><span>|</span><span><i class="fa fa-remove"></i></span></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.SiteUser.FullName</td>
                                                        <td>@item.Title</td>
                                                        <td>@item.Location</td>
                                                        <td>@item.PostedDate.ToString("d")</td>
                                                        <td>@item.ProStatus</td>
                                                        <th>
                                                            <a href="@Url.Action("ApprovePro", "Projects", new { id = item.ProjectID })"><span><i class="fa fa-check" title="Accept"></i></span></a>
                                                            <span>|</span>
                                                            <a href="@Url.Action("Delete", "Projects", new { id = item.ProjectID })"><span><i class="fa fa-remove" title="Reject/Delete"></i></span></a>
                                                        </th>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


