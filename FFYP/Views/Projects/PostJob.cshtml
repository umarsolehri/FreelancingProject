@model FFYP.Models.Project

@{
    ViewBag.Title = "Post Job";
}

<div class="compny-profile">
    <div class="profile-company-content main-user" data-bg-color="f5f5f5">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="tab-content">
                        <div class="profile-main">
                            <h3>Post a Job</h3>
                            <div class="profile-in">
                                @using (Html.BeginForm("PostJob", "Projects", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.TextBoxFor(model => model.Title, new { @placeholder = "Project Title" })
                                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                    @Html.TextBoxFor(model => model.Duration, new { @placeholder = "Duration in months" })
                                    @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger" })
                                    @Html.TextBoxFor(model => model.SkillsRequired, new { @placeholder = "Required Skills" })
                                    @Html.ValidationMessageFor(model => model.SkillsRequired, "", new { @class = "text-danger" })
                                    @Html.TextBoxFor(model => model.Location, new { @placeholder = "Location" })
                                    @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                                    @Html.DropDownListFor(model => model.ProjectStatus, new SelectListItem[]
                                    {
                                        new SelectListItem() {Value="New Project",Text="New Project" },
                                        new SelectListItem() { Value = "Ongoin project", Text = "Ongoin project" },
                                        new SelectListItem() { Value = "Ending Satges", Text = "Ending Satges" },
                                    }, "Select Status")
                                    @Html.ValidationMessageFor(model => model.ProjectStatus, "", new { @class = "text-danger" })

                                    @Html.TextAreaFor(model => model.Description, 5, 8, new { @placeholder = "Description about project" })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    <br />
                                    <button class="btn btn-primary">Post Job</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    window.onload = function () {
        CKEDITOR.replace('Description');
    }
</script>