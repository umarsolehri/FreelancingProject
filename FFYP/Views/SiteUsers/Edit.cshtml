@model SiteUser

@{
    ViewBag.Title = "Edit Profile";
}

<div class="compny-profile">
    @{ Html.RenderAction("UserNameDisplay", "SiteUsers"); }
    <div class="profile-company-content user-profile main-user" data-bg-color="f5f5f5">
        <div class="container">
            <div class="row">
                @{ Html.RenderPartial("_Partialheadbar"); }
                <div class="col-md-12">
                    <div class="tab-content">
                        <div id="main-wrapper">
                            <div class="uou-post-comment">
                                <div class="row col-md-8 col-md-push-2">
                                    <div class="uou-post-comment-form">



                                        @using (Html.BeginForm("Edit", "SiteUsers", FormMethod.Post, new { @role = "from", enctype = "multipart/form-data" }))
                                        {
                                            @Html.AntiForgeryToken()

                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            @Html.HiddenFor(model => model.SiteUserID)
                                            @Html.HiddenFor(model => model.UserId)
                                            @Html.HiddenFor(model => model.ImageName)
                                            @Html.HiddenFor(model => model.imagepath)


                                            @Html.TextBoxFor(model => model.FirstName, new { @placeholder = "First Name" })
                                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })

                                            @Html.TextBoxFor(model => model.LastName, new { @placeholder = "Last Name" })
                                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })

                                            @Html.TextBoxFor(model => model.Country, new { @placeholder = "Country" })
                                            @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })

                                            @Html.TextBoxFor(model => model.City, new { @placeholder = "City" })
                                            @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })

                                            @Html.TextBoxFor(model => model.Degree, new { @placeholder = "Degree" })
                                            @Html.ValidationMessageFor(model => model.Degree, "", new { @class = "text-danger" })

                                            @Html.TextBoxFor(model => model.Experiance, new { @placeholder = "Experiance" })
                                            @Html.ValidationMessageFor(model => model.Experiance, "", new { @class = "text-danger" })

                                            @Html.TextBoxFor(model => model.CareerLevel, new { @placeholder = "Career Level" })
                                            @Html.ValidationMessageFor(model => model.CareerLevel, "", new { @class = "text-danger" })

                                            @Html.TextBoxFor(model => model.Email, new { @readonly = "readonly", @placeholder = "Email Address" })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                                            @Html.TextBoxFor(model => model.Website, new { @placeholder = "Website url" })
                                            @Html.ValidationMessageFor(model => model.Website, "", new { @class = "text-danger" })

                                            @Html.TextBoxFor(model => model.PhoneNumber, new { @placeholder = "Phone Number" })
                                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })

                                            @Html.TextBoxFor(model => model.IDCard, new { @placeholder = "ID Card" })
                                            @Html.ValidationMessageFor(model => model.IDCard, "", new { @class = "text-danger" })

                                            @Html.TextAreaFor(model => model.Adddress, 3, 7, new { @placeholder = "Address" })
                                            @Html.ValidationMessageFor(model => model.Adddress, "", new { @class = "text-danger" })

                                            @Html.TextAreaFor(model => model.Description, 4, 7, new { @placeholder = "Description" })
                                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

                                            <input type="file" name="image" value="Upload Image" /><span>Image Upload</span>
                                            <hr />
                                            <button type="submit" class="btn mb20 btn-medium btn-primary"><i class="fa fa-save"></i> Save</button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>