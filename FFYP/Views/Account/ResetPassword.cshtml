@model ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}


<div class="home-pro">
    <div class="banr-head">
        <div class="container">
            <div class="row">
                <div class="logreg">
                    <div class="login-sec">
                        <div class="uou-tabs">
                            <ul class="tabs">
                                <li class="active"><a href="#log-in">Reset your password.</a></li>
                            </ul>
                            <div class="content">
                                <div id="log-in" class="active">
                                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary("", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.Code)


                                        @Html.TextBoxFor(m => m.Email, new { @type = "email", @placeholder = "Email Address" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                                        @Html.PasswordFor(m => m.Password, new { @placeholder = "Password" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirm Password" })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

                                        <br />
                                        <button type="submit"><span><i class="fa fa-send"></i> Reset</span></button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>