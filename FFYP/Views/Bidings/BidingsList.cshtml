@model IEnumerable<FFYP.Models.Biding>

@{
    ViewBag.Title = "Bid List";
}
<div class="search-pro">
    <div class="map-search">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("BidingsList", "Bidings", FormMethod.Get))
                    {
                        <div class="map-search-fields">
                            <div class="field custom-select-box" style="position: relative;margin-right: 18px;width: 95%;float: left;display: inline-block;">
                                @Html.TextBox("search", null, new { @placeholder = "Search Bid by Price" })
                            </div>
                        </div>
                        <div class="search-button" style="margin-right: 60px;">
                            <button type="submit"><span> <i class="fa fa-search"></i> Search</span></button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="compny-profile">
    <div class="profile-company-content" data-bg-color="f5f5f5">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-8">
                        <div class="tab-content">

                            <!-- PROFILE -->
                            <div id="profile" class="tab-pane fade in active" style="background:#f1f1f1; color:black;">
                                <div @*class="profile-main"*@ style="background:#f1f1f1">
                                    <h3 style="background:#0099ff;color:#fff; padding-bottom:15px;padding-top:15px;">@item.Project.Title</h3>
                                    <div @*class="profile-in"*@ style="padding-left:30px;">
                                        @*<div class="image-part"> <img src="images/profile-img.jpg" alt=""> </div>*@
                                        <p>
                                            @Html.Raw(HttpUtility.HtmlDecode(item.Description))
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-4">
                        <div class="sidebar">
                            <h5 class="main-title">Bid made by</h5>
                            <div class="sidebar-information">
                                <ul class="single-category">
                                    <li class="row">
                                        <h6 class="title col-xs-6">Full name</h6>
                                        <span class="subtitle col-xs-6">@item.SiteUser.FullName</span>
                                    </li>
                                    @*<li class="row">
                                            <h6 class="title col-xs-6">Email</h6>
                                            <span class="subtitle col-xs-6">@item.SiteUser.Email</span>
                                        </li>*@
                                    @*<li class="row">
                                            <h6 class="title col-xs-6">Contact No</h6>
                                            <span class="subtitle col-xs-6">@item.SiteUser.PhoneNumber</span>
                                        </li>*@
                                    <li class="row">
                                        <h6 class="title col-xs-6">Career Level</h6>
                                        <span class="subtitle col-xs-6">@item.SiteUser.CareerLevel</span>
                                    </li>
                                    @*<li class="row">
                                        <h6 class="title col-xs-6">Degree</h6>
                                        <span class="subtitle col-xs-6">@item.SiteUser.Degree</span>
                                    </li>*@
                                    <li class="row">
                                        <h6 class="title col-xs-6">Experiance</h6>
                                        <span class="subtitle col-xs-6">@item.SiteUser.Experiance</span>
                                    </li>
                                    <li class="row">
                                        <h6 class="title col-xs-6">Bid Price</h6>
                                        <span class="subtitle col-xs-6">@item.BidPrice</span>
                                    </li>
                                    @*<li class="row">
                                        <h6 class="title col-xs-6">Website</h6>
                                        <span class="subtitle col-xs-6">@item.SiteUser.Website</span>
                                    </li>*@
                                    <li class="row">
                                        <br />

                                        @if (ViewBag.check == false)
                                        {
                                            <a href="@Url.Action("Approvebid","Bidings",new { id=item.BidingID})" style="margin-left:80px; border:none; background:#0099ff;
                                                    border-radius:30px;padding: 8px 30px; color: #fff; float:left;
                                                    font-size: 14px; transition: all 0.3s;">
                                                Approve
                                            </a>
                                        }
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>